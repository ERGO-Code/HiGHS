]

[cc_test(
    name = name,
    srcs = ["check/%s.cpp" % name],
    copts = [
        "-Iextern",
        "-Wno-unused-variable",
        "-Wno-unused-but-set-variable",
    ],
    deps = [
        ":highs",
        ":test_lib",
    ],
) for name in TEST_NAMES]
